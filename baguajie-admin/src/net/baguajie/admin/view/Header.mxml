<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  width="100%">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import net.baguajie.admin.model.AdminModel;
			import net.baguajie.admin.viewhelper.ViewHelperDelegator;
			import net.baguajie.admin.vo.UserVo;

			[Bindable]
			private var model:AdminModel=AdminModel.getInstance();

			private function signOut():void
			{
				ViewHelperDelegator.getAdminHelper().toLoginState();
			}
		]]>
	</fx:Script>
	<mx:HBox width="100%"
			 paddingLeft="10"
			 paddingTop="10"
			 paddingRight="10"
			 paddingBottom="10"
			 backgroundColor="#003589">
		<mx:Label text="八卦街管理控制台 "
				  fontSize="22"
				  color="#ffffff"
				  fontWeight="bold"/>
		<mx:Spacer width="100%"/>
		<mx:HBox horizontalGap="0">
			<mx:Label text="{model.signInUser.name}"
					  color="#ffffff"/>
			<mx:Label text="{model.signInUser.role==UserVo.ADMIN?'(管理员)':'(普通用户)'}"
					  color="#ffffff"/>
			<mx:Label text="  | "
					  color="#ffffff"/>
			<mx:LinkButton height="21"
						   label="退出登陆"
						   color="#ffffff"
						   click="signOut()"/>
		</mx:HBox>
	</mx:HBox>
</s:HGroup>
